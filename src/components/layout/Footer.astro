---
const currentYear = new Date().getFullYear();

const footerLinks = {
  discover: [
    { href: '/phim', label: 'Tất Cả Phim' },
    { href: '/phim-le', label: 'Phim Lẻ' },
    { href: '/phim-bo', label: 'Phim Bộ' },
    { href: '/hoat-hinh', label: 'Hoạt Hình' },
    { href: '/phim-chieu-rap', label: 'Phim Chiếu Rạp' },
  ],
  browse: [
    { href: '/the-loai', label: 'Thể Loại' },
    { href: '/quoc-gia', label: 'Quốc Gia' },
    { href: '/xu-huong', label: 'Xu Hướng' },
  ],
  account: [
    { href: '/danh-sach-yeu-thich', label: 'Danh Sách Yêu Thích' },
    { href: '/lich-su-xem', label: 'Lịch Sử Xem' },
    { href: '/cai-dat', label: 'Cài Đặt' },
  ],
  company: [
    { href: '/gioi-thieu', label: 'Giới Thiệu' },
    { href: '/lien-he', label: 'Liên Hệ' },
    { href: '/ho-tro', label: 'Hỗ Trợ' },
    { href: '/dieu-khoan', label: 'Điều Khoản' },
    { href: '/chinh-sach-bao-mat', label: 'Chính Sách Bảo Mật' },
  ],
};
---

<footer
  class="relative mt-20 border-t border-white/5 bg-black/40 backdrop-blur-xl"
  role="contentinfo"
>
  <!-- Ambient Glow -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -left-40 w-80 h-80 bg-primary-500/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -right-40 w-80 h-80 bg-secondary-500/10 rounded-full blur-3xl">
    </div>
  </div>

  <div class="container-custom py-16 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-10 mb-12">
      <!-- Brand -->
      <div class="lg:col-span-2 space-y-6">
        <a href="/" class="flex items-center gap-3 focus-ring w-fit group">
          <div class="relative w-10 h-10 flex items-center justify-center">
            <div
              class="absolute inset-0 bg-gradient-to-tr from-primary-500 to-secondary-500 rounded-full blur-lg opacity-40 group-hover:opacity-80 transition-opacity duration-500"
            >
            </div>
            <svg
              class="relative w-7 h-7 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span
            class="font-display text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-white via-primary-100 to-white/80"
            >CineVerse</span
          >
        </a>
        <p class="text-base text-text-muted leading-relaxed max-w-sm">
          Khám phá thế giới điện ảnh vô tận với trải nghiệm xem phim đỉnh cao. Hàng ngàn bộ phim bom
          tấn đang chờ đón bạn.
        </p>
      </div>

      <!-- Discover -->
      <div>
        <h3 class="font-display font-bold text-lg text-white mb-6">Khám Phá</h3>
        <ul class="space-y-3">
          {
            footerLinks.discover.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-text-muted hover:text-primary-400 transition-colors focus-ring flex items-center gap-2 group"
                >
                  <span class="w-1 h-1 rounded-full bg-primary-500 opacity-0 group-hover:opacity-100 transition-opacity" />
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Browse -->
      <div>
        <h3 class="font-display font-bold text-lg text-white mb-6">Danh Mục</h3>
        <ul class="space-y-3">
          {
            footerLinks.browse.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-text-muted hover:text-primary-400 transition-colors focus-ring flex items-center gap-2 group"
                >
                  <span class="w-1 h-1 rounded-full bg-primary-500 opacity-0 group-hover:opacity-100 transition-opacity" />
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Account -->
      <div>
        <h3 class="font-display font-bold text-lg text-white mb-6">Tài Khoản</h3>
        <ul class="space-y-3">
          {
            footerLinks.account.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-text-muted hover:text-primary-400 transition-colors focus-ring flex items-center gap-2 group"
                >
                  <span class="w-1 h-1 rounded-full bg-primary-500 opacity-0 group-hover:opacity-100 transition-opacity" />
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="font-display font-bold text-lg text-white mb-6">Công Ty</h3>
        <ul class="space-y-3">
          {
            footerLinks.company.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-text-muted hover:text-primary-400 transition-colors focus-ring flex items-center gap-2 group"
                >
                  <span class="w-1 h-1 rounded-full bg-primary-500 opacity-0 group-hover:opacity-100 transition-opacity" />
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="border-t border-white/5 pt-8 flex flex-col md:flex-row justify-between items-center gap-6"
    >
      <p class="text-sm text-text-muted">
        © {currentYear} CineVerse. All rights reserved.
      </p>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        <a
          href="#"
          class="w-10 h-10 flex items-center justify-center rounded-full bg-white/5 hover:bg-white/10 text-text-muted hover:text-white transition-all focus-ring hover:scale-110"
          aria-label="Facebook"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path
              d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
            ></path>
          </svg>
        </a>
        <a
          href="#"
          class="w-10 h-10 flex items-center justify-center rounded-full bg-white/5 hover:bg-white/10 text-text-muted hover:text-white transition-all focus-ring hover:scale-110"
          aria-label="Twitter"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path
              d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
            ></path>
          </svg>
        </a>
        <a
          href="#"
          class="w-10 h-10 flex items-center justify-center rounded-full bg-white/5 hover:bg-white/10 text-text-muted hover:text-white transition-all focus-ring hover:scale-110"
          aria-label="YouTube"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path
              d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
