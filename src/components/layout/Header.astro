---
import { ThemeToggle } from '@/components/common/ThemeToggle';

const navLinks = [
  { href: '/phim', label: 'Phim' },
  { href: '/phim-le', label: 'Phim Lẻ' },
  { href: '/phim-bo', label: 'Phim Bộ' },
  { href: '/hoat-hinh', label: 'Hoạt Hình' },
  { href: '/phim-chieu-rap', label: 'Phim Chiếu Rạp' },
];
---

<header class="fixed top-6 left-0 right-0 z-50 flex justify-center px-4 pointer-events-none">
  <div
    class="glass rounded-full px-2 py-2 pl-6 flex items-center justify-between gap-4 md:gap-8 pointer-events-auto transition-all duration-500 hover:bg-glass-highlight/10 shadow-glow-primary/10 hover:shadow-glow-primary/30 backdrop-blur-xl border border-white/10"
  >
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 focus-ring group mr-2" aria-label="CineVerse Home">
      <div class="relative w-9 h-9 flex items-center justify-center">
        <div
          class="absolute inset-0 bg-gradient-to-tr from-primary-500 to-secondary-500 rounded-full blur-lg opacity-60 group-hover:opacity-100 transition-opacity duration-500 animate-pulse"
        >
        </div>
        <svg
          class="relative w-6 h-6 text-white drop-shadow-md"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2.5"
            d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2.5"
            d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <span
        class="font-display text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-white via-primary-100 to-white/80 group-hover:to-white transition-all tracking-tight hidden sm:block"
        >CineVerse</span
      >
    </a>

    <!-- Desktop Navigation -->
    <nav
      class="hidden md:flex items-center gap-1 bg-black/20 rounded-full p-1 border border-white/5"
      aria-label="Main navigation"
    >
      {
        navLinks.map((link) => {
          const isActive =
            Astro.url.pathname === link.href ||
            (link.href !== '/' && Astro.url.pathname.startsWith(link.href));
          return (
            <a
              href={link.href}
              class:list={[
                'px-5 py-2 rounded-full text-sm font-medium transition-all duration-300 focus-ring relative overflow-hidden group',
                isActive
                  ? 'text-white bg-white/10 shadow-inner'
                  : 'text-text-secondary hover:text-white hover:bg-white/5',
              ]}
            >
              <span class="relative z-10">{link.label}</span>
              {isActive && (
                <div class="absolute inset-0 bg-gradient-to-r from-primary-500/20 to-secondary-500/20 blur-sm" />
              )}
            </a>
          );
        })
      }
    </nav>

    <!-- Right Actions -->
    <div class="flex items-center gap-2 pr-2">
      <!-- Search Button -->
      <button
        class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-white/10 text-text-secondary hover:text-white transition-colors focus-ring group"
        aria-label="Search movies"
        title="Search"
      >
        <svg
          class="w-5 h-5 group-hover:scale-110 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </button>

      <!-- Theme Toggle -->
      <div class="scale-90">
        <ThemeToggle client:only="react" />
      </div>

      <!-- Watchlist Button -->
      <a
        href="/danh-sach-yeu-thich"
        class="hidden sm:flex w-10 h-10 items-center justify-center rounded-full hover:bg-white/10 text-text-secondary hover:text-white transition-colors focus-ring group"
        aria-label="My watchlist"
        title="Watchlist"
      >
        <svg
          class="w-5 h-5 group-hover:scale-110 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
          ></path>
        </svg>
      </a>

      <!-- Mobile Menu Button -->
      <button
        class="md:hidden w-10 h-10 flex items-center justify-center rounded-full hover:bg-white/10 text-text-secondary hover:text-white transition-colors focus-ring"
        aria-label="Open menu"
        aria-expanded="false"
        id="mobile-menu-button"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu (Floating) -->
  <div
    id="mobile-menu"
    class="absolute top-24 left-4 right-4 glass rounded-3xl p-2 hidden transform origin-top transition-all duration-300 border border-white/10 shadow-2xl"
    role="navigation"
    aria-label="Mobile navigation"
  >
    <div class="space-y-1 bg-black/40 rounded-2xl p-2">
      {
        navLinks.map((link) => {
          const isActive =
            Astro.url.pathname === link.href ||
            (link.href !== '/' && Astro.url.pathname.startsWith(link.href));
          return (
            <a
              href={link.href}
              class:list={[
                'block px-4 py-3 rounded-xl transition-colors focus-ring font-medium',
                isActive
                  ? 'bg-white/10 text-white'
                  : 'text-text-secondary hover:text-white hover:bg-white/5',
              ]}
            >
              {link.label}
            </a>
          );
        })
      }
      <div class="h-px bg-white/10 my-2 mx-4"></div>
      <a
        href="/danh-sach-yeu-thich"
        class="flex items-center gap-3 px-4 py-3 rounded-xl text-text-secondary hover:text-white hover:bg-white/5 transition-colors focus-ring"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
          ></path></svg
        >
        Danh Sách Yêu Thích
      </a>
      <a
        href="/lich-su-xem"
        class="flex items-center gap-3 px-4 py-3 rounded-xl text-text-secondary hover:text-white hover:bg-white/5 transition-colors focus-ring"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg
        >
        Lịch Sử Xem
      </a>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  if (button && menu) {
    button.addEventListener('click', () => {
      const isExpanded = button.getAttribute('aria-expanded') === 'true';
      button.setAttribute('aria-expanded', (!isExpanded).toString());
      menu.classList.toggle('hidden');
    });
  }
</script>
