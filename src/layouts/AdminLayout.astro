---
import BaseLayout from './BaseLayout.astro';
import { ThemeToggle } from '@/components/common/ThemeToggle';

export interface Props {
  title: string;
}

const { title } = Astro.props;

const navItems = [
  { label: 'Dashboard', href: '/admin', icon: 'LayoutDashboard' },
  { label: 'Films', href: '/admin/films', icon: 'Film' },
  { label: 'Categories', href: '/admin/categories', icon: 'Tags' },
  { label: 'Countries', href: '/admin/countries', icon: 'Globe' },
  { label: 'Crawler', href: '/admin/crawler', icon: 'Bot' },
];
---

<BaseLayout title={`${title} | CineVerse Admin`} noindex>
  <div class="flex h-screen bg-bg-primary overflow-hidden">
    <!-- Sidebar -->
    <aside class="w-64 glass border-r border-glass-border flex flex-col">
      <div class="p-6 flex items-center gap-3 border-b border-glass-border">
        <div
          class="w-8 h-8 rounded-lg bg-primary-500 flex items-center justify-center text-white font-bold"
        >
          CV
        </div>
        <span class="font-display text-xl font-bold text-white">Admin</span>
      </div>

      <nav class="flex-1 p-4 space-y-1 overflow-y-auto">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="flex items-center gap-3 px-4 py-3 rounded-xl text-text-secondary hover:text-white hover:bg-white/5 transition-colors group"
            >
              <span class="font-medium">{item.label}</span>
            </a>
          ))
        }
      </nav>

      <div class="p-4 border-t border-glass-border">
        <button
          id="logout-btn"
          class="flex w-full items-center gap-3 px-4 py-3 rounded-xl text-red-400 hover:text-red-300 hover:bg-red-500/10 transition-colors"
        >
          <span class="font-medium">Logout</span>
        </button>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col min-w-0 overflow-hidden relative">
      <!-- Ambient Background (Local to Admin) -->
      <div class="absolute inset-0 z-0 pointer-events-none">
        <div
          class="absolute top-[-10%] right-[-10%] w-[500px] h-[500px] rounded-full bg-primary-900/20 blur-[100px]"
        >
        </div>
        <div
          class="absolute bottom-[-10%] left-[-10%] w-[500px] h-[500px] rounded-full bg-secondary-900/20 blur-[100px]"
        >
        </div>
      </div>

      <!-- Top Header -->
      <header
        class="h-16 glass border-b border-glass-border flex items-center justify-between px-6 z-10"
      >
        <h1 class="text-xl font-bold text-white">{title}</h1>
        <div class="flex items-center gap-4">
          <ThemeToggle client:only="react" />
          <div class="w-8 h-8 rounded-full bg-neutral-700 border border-glass-border"></div>
        </div>
      </header>

      <!-- Page Content -->
      <div class="flex-1 overflow-y-auto p-6 z-10">
        <slot />
      </div>
    </main>
  </div>
</BaseLayout>

<script>
  // Simple auth check
  const isAuthenticated = localStorage.getItem('admin_auth');
  if (!isAuthenticated && window.location.pathname !== '/admin/login') {
    window.location.href = '/admin/login';
  }

  // Logout handler
  const logoutBtn = document.getElementById('logout-btn');
  if (logoutBtn) {
    logoutBtn.addEventListener('click', () => {
      localStorage.removeItem('admin_auth');
      window.location.href = '/admin/login';
    });
  }
</script>
