---
import MainLayout from '@/layouts/MainLayout.astro';
import { filmService } from '@/lib/api/services/filmService';
import { HeroSlider } from '@/components/movie/HeroSlider';
import { MovieCarousel } from '@/components/movie/MovieCarousel';
import { MovieGrid } from '@/components/movie/MovieGrid';

// Fetch data server-side
let hotFilms = [];
let newReleases = [];
let sliderMovies = [];
let error = null;

try {
  const [hotData, newData] = await Promise.all([
    filmService.getHotFilms(20),
    filmService.getFilms({ limit: 12 }),
  ]);

  hotFilms = hotData.data || [];
  newReleases = newData.data || [];

  // Use top 5 hot films for slider, or fallback to new releases
  sliderMovies = hotFilms.slice(0, 5);
  if (sliderMovies.length === 0) {
    sliderMovies = newReleases.slice(0, 5);
  }
} catch (e) {
  error = e;
  console.error('Error fetching movies:', e);
}
---

<MainLayout
  title="CineVerse - Your Gateway to Cinematic Excellence"
  description="Discover and watch thousands of movies, TV shows, and anime. From Hollywood blockbusters to indie gems."
>
  {
    error ? (
      <div class="container-custom py-32 text-center">
        <div class="glass p-12 rounded-3xl max-w-2xl mx-auto border border-red-500/20 bg-red-500/5">
          <h2 class="heading-3 mb-4 text-red-400">Unable to load movies</h2>
          <p class="text-text-muted text-lg">
            We're having trouble connecting to the server. Please try again later.
          </p>
        </div>
      </div>
    ) : (
      <>
        {/* Featured Movie Slider */}
        {sliderMovies.length > 0 && <HeroSlider movies={sliderMovies} client:load />}

        <div class="container-custom py-16 space-y-24">
          {/* Trending Now Carousel */}
          {hotFilms.length > 0 && (
            <section>
              <MovieCarousel
                title="ðŸ”¥ Trending Now"
                movies={hotFilms}
                viewAllLink="/xu-huong"
                client:load
              />
            </section>
          )}

          {/* New Releases Grid */}
          {newReleases.length > 0 && (
            <section aria-labelledby="new-releases-heading" class="relative">
              <div class="flex items-end justify-between mb-10">
                <div>
                  <h2
                    id="new-releases-heading"
                    class="heading-2 text-transparent bg-clip-text bg-gradient-to-r from-white to-white/60 mb-2"
                  >
                    New Releases
                  </h2>
                  <p class="text-text-muted text-lg">Fresh from the cinema to your screen</p>
                </div>
                <a
                  href="/phim"
                  class="group flex items-center gap-2 text-primary-400 hover:text-white font-medium transition-colors focus-ring px-4 py-2 rounded-full hover:bg-white/5"
                >
                  View All
                  <svg
                    class="w-4 h-4 group-hover:translate-x-1 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M14 5l7 7m0 0l-7 7m7-7H3"
                    />
                  </svg>
                </a>
              </div>
              <MovieGrid movies={newReleases} client:only="react" />
            </section>
          )}

          {/* Browse by Type */}
          <section aria-labelledby="browse-heading" class="relative">
            <div class="absolute inset-0 bg-gradient-to-b from-primary-900/10 to-transparent rounded-3xl -z-10 blur-3xl" />

            <h2 id="browse-heading" class="heading-3 mb-10 text-center">
              Browse by{' '}
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-400 to-secondary-400">
                Category
              </span>
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
