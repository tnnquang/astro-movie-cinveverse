---
import AdminLayout from '@/layouts/AdminLayout.astro';

const crawlerLogs = [
  { id: 1, source: 'ophim', status: 'Success', items: 12, time: '2 mins ago' },
  { id: 2, source: 'kkphim', status: 'Processing', items: 45, time: 'Running...' },
  { id: 3, source: 'ophim', status: 'Failed', items: 0, time: '1 hour ago' },
  { id: 4, source: 'nguonc', status: 'Success', items: 8, time: '3 hours ago' },
];
---

<AdminLayout title="Crawler Management">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Crawler Controls -->
    <div class="lg:col-span-1 space-y-6">
      <div class="glass p-6 rounded-2xl">
        <h2 class="text-lg font-bold text-white mb-4">Manual Trigger</h2>
        <p class="text-text-secondary text-sm mb-6">
          Manually trigger the crawler for specific sources. This will fetch the latest movies.
        </p>

        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text-secondary mb-2">Source</label>
            <select
              class="w-full px-4 py-3 rounded-xl bg-neutral-900/50 border border-glass-border text-white focus:border-primary-500 focus:ring-1 focus:ring-primary-500 outline-none transition-all"
            >
              <option value="ophim">OPhim</option>
              <option value="kkphim">KKPhim</option>
              <option value="nguonc">NguonC</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-text-secondary mb-2">Pages to Crawl</label>
            <input
              type="number"
              min="1"
              max="10"
              value="1"
              class="w-full px-4 py-3 rounded-xl bg-neutral-900/50 border border-glass-border text-white focus:border-primary-500 focus:ring-1 focus:ring-primary-500 outline-none transition-all"
            />
          </div>

          <button
            class="w-full py-3 rounded-xl bg-primary-600 hover:bg-primary-500 text-white font-bold shadow-lg shadow-primary-600/20 transition-all flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5 animate-spin hidden" fill="none" viewBox="0 0 24 24">
              <circle
                class="opacity-25"
                cx="12"
                cy="12"
                r="10"
                stroke="currentColor"
                stroke-width="4"></circle>
              <path
                class="opacity-75"
                fill="currentColor"
                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
              ></path>
            </svg>
            Start Crawl
          </button>
        </div>
      </div>

      <div class="glass p-6 rounded-2xl">
        <h2 class="text-lg font-bold text-white mb-4">Configuration</h2>
        <div class="flex items-center justify-between py-3 border-b border-glass-border">
          <span class="text-text-secondary">Auto-Crawl</span>
          <button class="w-12 h-6 rounded-full bg-primary-600 relative">
            <div class="absolute right-1 top-1 w-4 h-4 rounded-full bg-white shadow-sm"></div>
          </button>
        </div>
        <div class="flex items-center justify-between py-3">
          <span class="text-text-secondary">Interval</span>
          <span class="text-white font-medium">Every 6h</span>
        </div>
      </div>
    </div>

    <!-- Crawler Logs -->
    <div class="lg:col-span-2">
      <div class="glass rounded-2xl overflow-hidden">
        <div class="p-6 border-b border-glass-border flex items-center justify-between">
          <h2 class="text-lg font-bold text-white">Crawler Logs</h2>
          <button class="text-sm text-primary-400 hover:text-primary-300 font-medium"
            >Clear Logs</button
          >
        </div>

        <div class="overflow-x-auto">
          <table class="w-full text-left">
            <thead class="bg-white/5">
              <tr>
                <th
                  class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider"
                  >Source</th
                >
                <th
                  class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider"
                  >Status</th
                >
                <th
                  class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider"
                  >Items</th
                >
                <th
                  class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider"
                  >Time</th
                >
                <th
                  class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider text-right"
                  >Details</th
                >
              </tr>
            </thead>
            <tbody class="divide-y divide-glass-border">
              {
                crawlerLogs.map((log) => (
                  <tr class="hover:bg-white/5 transition-colors">
                    <td class="px-6 py-4">
                      <span class="font-medium text-white capitalize">{log.source}</span>
                    </td>
                    <td class="px-6 py-4">
                      <span
                        class={`px-2 py-1 rounded-full text-xs font-medium border ${
                          log.status === 'Success'
                            ? 'bg-green-500/10 text-green-400 border-green-500/20'
                            : log.status === 'Processing'
                              ? 'bg-blue-500/10 text-blue-400 border-blue-500/20'
                              : 'bg-red-500/10 text-red-400 border-red-500/20'
                        }`}
                      >
                        {log.status}
                      </span>
                    </td>
                    <td class="px-6 py-4 text-text-secondary">{log.items}</td>
                    <td class="px-6 py-4 text-text-secondary">{log.time}</td>
                    <td class="px-6 py-4 text-right">
                      <button class="text-text-secondary hover:text-white">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5l7 7-7 7"
                          />
                        </svg>
                      </button>
                    </td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>
